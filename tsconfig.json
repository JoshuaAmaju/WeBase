{
    "compilerOptions": {
        "strict": true,
        "outDir": "dist",
        "target": "es2015",
        "module": "esnext",
        "declaration": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "noImplicitThis": true,
        "removeComments": true,
        "declarationMap": true,
        "lib": ["es2017", "DOM"],
        "moduleResolution": "Node",
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
}