{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "noImplicitThis": true,
    "removeComments": true,
    "declarationMap": true,
    "lib": ["es2017", "DOM"],
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
